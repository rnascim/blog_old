<h1>New curriculo</h1>

<% form_for(@curriculo) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
     <%= f.check_box :ativo %> Este Currículo está ativo
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', curriculos_path %>