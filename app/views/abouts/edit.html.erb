<h1>Editing about</h1>

<% form_for(@about) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :texto %><br />
    <%= f.text_area :texto %>
  </p>
  <p>
    <%= f.check_box :ativo %>Ativar esta mensagem<br />
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @about %> |
<%= link_to 'Back', abouts_path %>